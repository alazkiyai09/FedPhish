# Unified Phishing Detection API - Environment Configuration

# API Configuration
APP_NAME="Unified Phishing Detection API"
APP_VERSION="1.0.0"
API_V1_PREFIX="/api/v1"
DEBUG=false
ENVIRONMENT=development  # development, staging, production

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# CORS Origins (comma-separated)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Model Paths
MODELS_BASE_PATH="/home/ubuntu/21Days_Project/models"
DAY1_PIPELINE_PATH="/home/ubuntu/21Days_Project/phishing_email_analysis"

# Performance Requirements
MAX_RESPONSE_TIME_MS_CLASSICAL=200
MAX_RESPONSE_TIME_MS_TRANSFORMER=1000
MAX_BATCH_SIZE=100
MAX_REQUEST_SIZE_MB=10

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL_REPUTATION_TTL=3600
REDIS_PREDICTION_CACHE_TTL=300

# Multi-Agent Configuration
MULTI_AGENT_ENABLED=true
MULTI_AGENT_TIMEOUT_S=60
MULTI_AGENT_PARALLEL=true

# GLM API Configuration (Zhipu AI)
GLM_API_KEY=your_glm_api_key_here
GLM_MODEL=glm-4-flash
GLM_TEMPERATURE=0.0
GLM_MAX_TOKENS=1000

# Ensemble Weights (must sum to 1.0)
ENSEMBLE_XGBOOST_WEIGHT=0.4
ENSEMBLE_TRANSFORMER_WEIGHT=0.4
ENSEMBLE_MULTI_AGENT_WEIGHT=0.2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/api.log

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_PATH=/metrics

# Feature Extraction Configuration
FEATURE_EXTRACTION_TIMEOUT_MS=100
ENABLE_FINANCIAL_FEATURES=true

# Feedback Configuration
FEEDBACK_STORAGE_PATH=./data/feedback

# Security Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
